# NPM Configuration for Ayma Seguros

# Guardar versiones exactas en package-lock.json
save-exact=true

# Usar lockfile version 2
lockfile-version=2

# Auto install peers
auto-install-peers=true

# Progreso en instalaciones
progress=true

# Usar cache más agresivo
prefer-offline=true

# Logs más limpios
loglevel=warn

# Engine strict (requerir Node 18+)
engine-strict=true
