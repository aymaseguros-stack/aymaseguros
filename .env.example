# Ayma Seguros - Ejemplo de Variables de Entorno
# Copiar este archivo como .env y completar con valores reales

# Google Apps Script
GOOGLE_APPS_SCRIPT_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec

# WhatsApp
WHATSAPP_NUMBER=5493416952259
WHATSAPP_COUNTRY_CODE=54
WHATSAPP_AREA_CODE=341

# Admin Credentials (IMPORTANTE: Cambiar en producción)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here

# Google Analytics 4
GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Configuración de la aplicación
APP_NAME=Ayma Advisors
APP_URL=https://aymaseguros.vercel.app
APP_DOMAIN=aymaseguros.vercel.app

# Email (para futuras integraciones)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=contacto@aymaseguros.com.ar

# Database (cuando se implemente)
DATABASE_URL=postgresql://user:password@localhost:5432/aymaseguros
DATABASE_TYPE=postgres

# JWT (cuando se implemente autenticación real)
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=7d

# Vercel (si se usa para deployment)
VERCEL_URL=aymaseguros.vercel.app
VERCEL_GIT_COMMIT_REF=main

# Localización
LOCALE=es_AR
TIMEZONE=America/Argentina/Buenos_Aires
CURRENCY=ARS

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CHATBOT=true
ENABLE_GOOGLE_SHEETS_SYNC=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false

# Límites y configuración
MAX_QUOTES_PER_DAY=100
SESSION_TIMEOUT_MINUTES=30
DATA_RETENTION_DAYS=365
