# EditorConfig para Ayma Seguros
# https://editorconfig.org

root = true

# Configuración por defecto para todos los archivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# HTML
[*.html]
indent_size = 4

# JavaScript/JSX
[*.{js,jsx}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# CSS/SCSS
[*.{css,scss}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# YAML
[*.{yml,yaml}]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Archivos de configuración
[{package.json,.prettierrc,.eslintrc}]
indent_size = 2
