{
  "name": "ayma-advisors",
  "version": "2.0.0",
  "description": "Sistema de cotizaciÃ³n de seguros con CRM - Ayma Advisors",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:report": "vitest run --coverage && open coverage/index.html",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chrome": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome'",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "test:ci": "npm run test:unit && npm run test:e2e",
    "test:perf": "node scripts/performance-test.js",
    "test:visual": "playwright test --grep @visual",
    "playwright:install": "playwright install",
    "playwright:install:deps": "playwright install --with-deps",
    "playwright:codegen": "playwright codegen http://localhost:8080",
    "serve": "npx http-server -p 8080 -c-1",
    "dev": "npx http-server -p 8080 -c-1",
    "start": "npm run serve",
    "build": "echo 'Static HTML - no build needed'",
    "preview": "npm run serve",
    "clean": "rm -rf node_modules coverage test-results playwright-report .vitest dist",
    "clean:cache": "rm -rf node_modules/.cache .vitest",
    "clean:all": "npm run clean && rm -rf package-lock.json",
    "health": "node scripts/health-check.js",
    "benchmark": "node scripts/benchmark.js",
    "report": "node scripts/generate-report.js",
    "pretest": "node scripts/health-check.js",
    "pretest:e2e": "node scripts/health-check.js"
  },
  "keywords": [
    "seguros",
    "insurance",
    "crm",
    "cotizacion",
    "rosario",
    "argentina",
    "testing",
    "playwright",
    "vitest"
  ],
  "author": "Ayma Advisors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aymaseguros-stack/aymaseguros.git"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "happy-dom": "^12.10.3",
    "jsdom": "^23.0.1",
    "playwright": "^1.40.1",
    "vite": "^5.0.7",
    "vitest": "^1.0.4"
  },
  "dependencies": {},
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
